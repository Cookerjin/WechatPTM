<!DOCTYPE html>
<html lang="zh-cn">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
        @Styles.Render("~/css/bootstrap.min.css")
        @Styles.Render("~/css/font-awesome.min.css")
        @Styles.Render("~/css/ionicons.min.css")
        @Styles.Render("~/css/morris/morris.css")
        @Styles.Render("~/css/jvectormap/jquery-jvectormap-1.2.2.css")
        @Styles.Render("~/css/fullcalendar/fullcalendar.css")
        @Styles.Render("~/css/daterangepicker/daterangepicker-bs3.css")
        @Styles.Render("~/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css")
        @Styles.Render("~/css/AdminLTE.css")
    </head>
<body class="skin-blue">
    <header class="header">
        <a href="index" class="logo">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            Wechat Admin
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
           @RenderPage("~/Views/Home/HeaderBar.cshtml")
        </nav>
    </header>
    <!--用户栏-->
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <section class="sidebar">
               @RenderPage("~/Views/Home/UserPanel.cshtml")
                            
                <!--左侧菜单-->
                @RenderPage("~/Views/Home/Menu.cshtml")
                </section>

</aside>
        <aside class="right-side">
            @*@RenderSection("Main",true)*@
          @RenderPage("~/Views/Home/Main.cshtml")
            </aside>
        
</div>
            
    
           
            <footer>
                <!-- ./wrapper -->
                @*@RenderSection("featured", required: false)*@
              @RenderBody()
                @*<div class="content-wrapper">
                    <div class="float-left">
                        <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                    </div>
                </div>*@
            </footer>

            @Scripts.Render("http://cdn.bootcss.com/jquery/2.0.2/jquery.min.js")
            @Scripts.Render("~/js/jquery-ui-1.10.3.min.js")
            @Scripts.Render("~/js/bootstrap.min.js")
            @Scripts.Render("http://cdn.bootcss.com/raphael/2.1.0/raphael-min.js")
            @Scripts.Render("~/js/plugins/morris/morris.min.js")
            @Scripts.Render("~/js/plugins/sparkline/jquery.sparkline.min.js")
            @Scripts.Render("~/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js")
            @Scripts.Render("~/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js")
            @Scripts.Render("~/js/plugins/fullcalendar/fullcalendar.min.js")
            @Scripts.Render("~/js/plugins/jqueryKnob/jquery.knob.js")
            @Scripts.Render("~/js/plugins/daterangepicker/daterangepicker.js")
            @Scripts.Render("~/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
            @Scripts.Render("~/js/plugins/iCheck/icheck.min.js")
            @Scripts.Render("~/js/AdminLTE/app.js")
            @Scripts.Render("js/AdminLTE/dashboard.js")
            @RenderSection("scripts", required: false)
</body>
</html>
